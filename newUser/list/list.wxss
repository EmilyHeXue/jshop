page{
  background: #f2f2f2;
}
.goods-list{
  display: flex;
  margin: 24rpx 21rpx 24rpx 21rpx;
  padding: 24rpx 20rpx 24rpx 22rpx;
  background: #ffffff;
}
.goods-img{
  width: 250rpx;
  height: 250rpx;
  background: #ffffff;
  margin-right: 24rpx;
}
.goods-content{
  flex: 1;
  overflow: hidden;
  position: relative;
}
.goods-name{
  font-weight: 600;
  font-size: 32rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
.goods-shortname{
  font-size: 24rpx;
  color: #777777;
  margin: 12rpx 0 20rpx 0;
}
.goods-slod{
  color: #ff3a3a;
  background: #ffe8e8;
  display: inline-flex;
  padding: 2rpx 16rpx;
  border-radius: 50rpx;
  font-size: 24rpx;
  line-height: 24rpx;
  align-items: center;
}
.goods-slod image{
  width: 24rpx;
  vertical-align: middle;
  margin-right: 10rpx;
}
.goods-footer{
  display: flex;
  position: absolute;
  bottom: 0;
  width: 100%;
  align-items: flex-end;
}
.goods-price{
  display: flex;
  flex: 1;
  align-items: baseline;
}
.goods-price view:first-child{
  color: red;
  font-weight: 600;
  font-size: 35rpx;
}
.goods-price view:first-child::before{
  content: '￥';
  font-size: 28rpx;
}
.goods-price view:last-child{
  color: #c3c3c3;
  font-weight: 600;
  font-size: 24rpx;
  text-decoration: line-through;
}
.goods-price view:last-child::before{
  content: '￥';
  font-size: 24rpx;
}
.goods-btn{
  background: #ff3a3a;
  color: #ffffff;
  font-size: 24rpx;
  padding: 8rpx 20rpx 6rpx 22rpx;
  border-radius: 50rpx;
}
