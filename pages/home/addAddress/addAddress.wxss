/* pages/home/addAddress/addAddress.wxss */

page{
  background: #F4F4F4;
}
.addAddress{
  margin: 20rpx;
  background: #ffffff;
  position: relative;
  border-radius: 10rpx;
  overflow: hidden;
}
.addAddress-header{
  display:flex;
  justify-content:space-between;
  align-items:center;
  font-size:30rpx;
  padding:22rpx 15rpx;
}
.addAddress-header-img{
  width:38rpx;
  height:38rpx;
}
.addAddress-item{
  display:flex;
  justify-content:flex-start;
  align-items:flex-start;
  flex-flow: column nowrap;
  margin:20rpx; 
  border-bottom:1px solid #eee;
  position: relative;
  color: #101010;
}
.default-address{
  display: flex;
  justify-content:space-between;
  align-items:center;
  margin:20rpx; 
}

.addAddress-item-title{
  width:130rpx;
  font-size:24rpx;
  color: #9F9F9F;
}

.addAddress-item-right{
  font-size:36rpx;
  display:flex;
  word-wrap:break-word;
  word-break: break-all;
  text-align:left;
  margin-top: 14rpx;
  margin-bottom: 20rpx;
}
textarea{
  height: 150rpx;
}
.post{
  position:fixed;
  bottom:0;
  left:0;
  display:flex;
  justify-content:center;
  align-items:center;
  height:100rpx;
  border-top:1px solid #aaa;
  box-shadow:0px -1px 1px #eee;
  right: 20rpx;
  left: 20rpx;
  bottom: 50rpx;
  padding: 10rpx 30rpx;
  border-radius: 50rpx;
  color: #ffffff;
  font-size: 28rpx;
  z-index: 9;
}

.placeholder{
  color: #999999;
}

.addAddress-bottom{
  position: absolute;
  right: 20rpx;
  padding: 10rpx 30rpx;
  border-radius: 50rpx;
  color: #ffffff;
  font-size: 28rpx;
  z-index: 9;
}
.location{
  top: 0rpx;
}
.nlp{
  bottom: 20rpx;
}