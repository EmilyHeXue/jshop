page{
  background: #f2f2f2;
}
.title{
  font-size: 40rpx;
  text-align: center;
  margin: 50rpx 0;
}
.pay_type{
  background: #fff;
  margin: 32rpx 26rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
  border-radius: 20rpx;
  padding: 40rpx 40rpx;
  font-size: 36rpx;
}
.pay_type_item{
  position: relative;
  text-align: center;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.recharge_balance{
  position: absolute;
  bottom: -30rpx;
  font-size: 25rpx;
  color: red;
  margin-left: 17px;
}
.recharge_balance::before{
  content: '剩余: ';
  color: #555;
}

.topay-button{
  width: 670rpx;
  color: #ffffff;
  border-radius: 50rpx;
  margin-top: 38rpx;
}

.content{
  background: #fff;
  margin: 32rpx 26rpx;
  border-radius: 20rpx;
  text-align: center;
  padding: 58rpx 0 44rpx 0;
}
.content-title{
  font-size: 32rpx;
}
.content-price{
  font-size: 56rpx;
  color: red;
  margin: 26rpx 0;
}
.content-price::before{
  font-size: 36rpx;
  content: '￥'
}
.content-footer{
  font-size: 32rpx;
}