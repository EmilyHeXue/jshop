.menu{
  position: fixed;
  left: 0;
  bottom: 0;
  background-color: #ffffff;
  width: 750rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 7px 0px;
  border-top:1rpx solid #eee;
  z-index: 999;
}
.menu-item{
  display: flex;
  flex-flow: column wrap;
  justify-content: center;
  align-items: center;
  flex: 1;
  position: relative;
}
.brage{
  position: absolute;
  top: -10%;
  right: 20%;
  border-radius: 50%;
  color: #ffffff;
  font-size: 20rpx;
  width: 35rpx;
  height: 35rpx;
  line-height: 35rpx;
  text-align: center;
}
.menu-item-img{
  width: 22px;
  height: 22px;
}
.menu-item-name{
  font-size: 12px;
}
