.seckill-title{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0rpx 20rpx;
}
.title-left{
  width: 160rpx;
  height: 40rpx;
}
.title-center-f{
  height: 34rpx;
  position: relative;
  flex: 1;
}
.title-center-l{
  position: absolute;
  left: 0;
  white-space: nowrap;
  overflow: hidden;
  width: auto;
  
}
.title-center{
  width: 300rpx;
  display: inline-flex;
  align-items: center;
  white-space: nowrap;
  margin-left: 20rpx;
  position: absolute;
  left: 0;
  
}
.avatar{
  width: 32rpx;
  height: 32rpx;
  background: green;
  margin-right: 10rpx;
  border-radius: 50%;
  display: inline-block;
}
.buyinfo{
  font-size: 24rpx;
  color: #808080;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  flex: 1;
}

.top-right{
  display: flex;
  align-items: center;
  color: #868686;
  font-size: 28rpx;
  flex: 1;
  justify-content: flex-end;
}
.icon{
  width: 50rpx;
  height: 50rpx;
}

.seckill{
  margin: 20rpx;  
  background: #ffffff;
  padding: 20rpx 0;
  overflow: hidden;
  border-radius: 10rpx;
}
.scroll{
  white-space: nowrap;
  overflow: hidden;
  background: #ffffff;
  padding: 20rpx 20rpx 0rpx 20rpx;
  box-sizing: border-box;
  border-radius: 20rpx;
}
.item{
  display: inline-block;
  text-align: center;
  margin-right: 26rpx;
  width: 200rpx;
  overflow: hidden;
}
.item:last-child{
  margin-right: 0;
}
.goodimg{
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}
.goodname{
  width: 200rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.good-bottom{
  display: flex;
  align-items: baseline;
  justify-content: center;
}
.goodprice{
  color: red;
  font-size: 28rpx;
  margin-right: 10rpx;
}
.goodprice::before{
  content: 'ï¿¥';
  font-size: 28rpx;
}
.goodline-price{
  text-decoration:line-through;
  font-size: 20rpx;
  color: #999999;
}

.title{
  color: #ff0000;
  font-size: 40rpx;
  font-weight: 600;
}

.animation{
  animation:mymove .5s;
}
@keyframes mymove {
  from{
    top: 40rpx;
    opacity: 0;
  }
  to{
    top: 0rpx;
    opacity: 1;
  }
}

.seckill-time{
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.first-time, .last-time{
  color: rgb(255, 104, 104);
  background: #eeeeee;
  width: 90rpx;
  text-align: center;
  font-weight: 600;
}