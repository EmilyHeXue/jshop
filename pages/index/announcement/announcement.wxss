.announcement{
  margin:20rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding-top: 0;
  border-radius: 10rpx;
  overflow: hidden;
}
.swiper{
  overflow: hidden;
  width: 100%;
  height: 40rpx;
  background: #ffffff;
  padding: 24rpx;
  
}
.icon{
  width:24px;
  height:24px;
  margin-right:10px;
}
.item{
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  flex: 1;
}
.announcement-item{
  display: flex;
  align-items: center;
}